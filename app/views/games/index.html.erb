<h2 class="center">Games</h2>
<hr />
<div class="row">
  <div class="col s12 m6">
    <button class="btn" id="toggle">Show Form</button>
    <ul id="games-list">
      <% @games.each do |game| %>
        <li
          class="game-item"
          data-id=<%= game.id %>
          data-name="<\<%= game.name%>"
        >
          <%= game.name %> - <%= game.description %>
        </li>
      <% end %>
    </ul>
    <%= @games.each do |game| %>
      <%= render partial: 'game', locals: { game: game }%>
    <% end %>  
  </div>
  <div class="col s12 m6" id="character-list">
    <h2 id="game">Characters in Game</h2>
    <ul id="characters">
      <li 
        class="game-item"
        data-id=<%= game.id %>
        data-name="<%= game.name %>"
        >
    </ul>
  </div>
</div>


